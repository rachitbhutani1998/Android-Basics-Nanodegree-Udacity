<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".playlists" android:label="Playlists" />
        <activity android:name=".nowplaying" android:label="Player"/>
        <activity android:name=".artists" android:label="Artists"/>
        <activity android:name=".albums" android:label="Albums"/>
        <activity android:name=".tracks" android:label="Tracks"/>
    </application>

</manifest>